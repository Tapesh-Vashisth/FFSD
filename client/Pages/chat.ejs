            <%- include("../Partials/chatListItem.ejs") %>
        </div>

    </div>

    <div class="rightSide border-l-[1px] border-purple-600 md:basis-2/3 md:flex hidden flex flex-col">
        <div class="chat-header bg-[#b8b8b8] dark:bg-zinc-800 flex rounded-b-md flex-row gap-2 px-2 py-3">
            <div class="imgtext">
                <div class="newflwerimg h-10 w-10">
                    <img src="/Sources/newflwer.png" class="cover w-full max-h-full">
                </div>
            </div>
            <div class="flex flex-row justify-between w-full items-center">
                <div class="text-sm">
                    <h4>Rachel</h4>
                    <span>online</span>
                </div>
                <div class="flex flex-row gap-4">
                    <div>
                        <ion-icon name="search-outline"></ion-icon>
                    </div>
                    <div>
                        <ion-icon name="ellipsis-vertical"></ion-icon>
                    </div>
                </div>
            </div>    
        </div>


        <div class="chatbox p-6 grow gap-3">
            <div class="message my_message text-sm">
                <p>Heyyy, how are you doing buddy?</p>
                <span>9:45</span>
            </div>
            <div class="message frnd_message text-sm">
                <p>yoo! i am doing fine</p>
                <span>10:00</span>
            </div>
        </div>

        <div class="chatbox_input bg-[#9e9e9e] dark:bg-zinc-800 gap-3 p-3 ">
            <ion-icon name="happy-outline"></ion-icon>
            <ion-icon name="attach-outline"></ion-icon>
            <input class="text-sm dark:bg-zinc-700" type="text" placeholder="Type a message">
            <ion-icon name="mic"></ion-icon>
        </div>
    </div>
</div>