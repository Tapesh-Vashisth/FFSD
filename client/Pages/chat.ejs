<div class="chat-container flex flex-row transition-colors duration-1000 text-black dark:text-white"">
    <div class="leftSide border-l-2 border-purple-600 md:basis-1/3 min-w-[260px] w-full">
        <div class="chat-header bg-[#b8b8b8] dark:bg-zinc-800 rounded-b-md py-2 px-3">
            <div class="userimg h-12 w-12">
                <img class="w-full max-h-full" src="/Sources/smallnew.png" class="cover">
            </div>
            <div class="flex flex-row gap-8 px-4">
                <div><ion-icon class="h-5 w-5" name="chatbubble-ellipses-outline"></ion-icon></div>
                <div><ion-icon class="h-5 w-5" name="add-circle-outline"></ion-icon></div>
                <div><ion-icon class="h-5 w-5" name="ellipsis-vertical"></ion-icon></div>
            </div>
        </div>

        <div class="search_chat p-2">
            <input class="py-2 pl-[50px] rounded-full dark:bg-zinc-700" type="text" placeholder="Search or start new chat">
            <ion-icon class="text-black dark:text-zinc-300" name="search-outline"></ion-icon>
        </div>

        <div class="chatlist">
